PS5_HOST=""
PS5_PORT=""
PS5_PAYLOAD=""

while getopts "h:p:" opt; do
    case ${opt} in
	h) PS5_HOST=$OPTARG;;
	p) PS5_PORT=$OPTARG;;
    esac
done
shift $((OPTIND -1))

if [[ -z $PS5_HOST || -z $PS5_PORT || -z $1 ]]; then
    echo "Usage: $(basename $0) -h HOST -p PORT PAYLOAD_PATH" >&2
    exit 1
fi

PS5_PAYLOAD=$1

{ cat $PS5_PAYLOAD && cat /dev/stdin; } | socat - TCP:$PS5_HOST:$PS5_PORT
